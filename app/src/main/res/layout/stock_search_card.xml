<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:weightSum="5.2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/stock_search_text_view_stock_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="APPLE"
                    android:textColor="#363B46"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/stock_search_text_view_stock_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textColor="#363B46"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/stock_search_text_view_stock_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="165.12"
                    android:textColor="#363B46"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/stock_search_image_view_stock_category_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_crop_square_24" />

                    <TextView
                        android:id="@+id/stock_search_text_view_stock_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TECH"
                        android:textColor="#363B46" />
                </LinearLayout>

                <TextView
                    android:id="@+id/stock_search_text_view_stock_change_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="-5.3755%"
                    android:textColor="#F44336" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/stock_search_image_view_stock_right_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_chevron_right_24"
                android:visibility="invisible" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/stock_search_button_stock_save"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:backgroundTint="#F0F0F0"
                android:gravity="center"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="10dp"
                app:icon="@drawable/ic_baseline_star_border_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="48dp"
                app:iconTint="#B48DD2" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>