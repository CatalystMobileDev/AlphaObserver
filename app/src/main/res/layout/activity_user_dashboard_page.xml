<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UserDashboardActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/image_user_dashboard_bg"
                android:layout_width="match_parent"
                android:layout_height="438dp"
                android:background="@drawable/user_dashboard_bg"
                android:scaleType="centerCrop"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:id="@+id/text_dashboard_greeting_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Good evening, "
                    android:textColor="@color/white"
                    android:textSize="40sp"/>
                <TextView
                    android:id="@+id/text_dashboard_greeting_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Linni!"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

            </LinearLayout>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_weight="3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/user_dashboard_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>