<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80FFFFFF"
    tools:context=".activity.EntryActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/entry_bg"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="26dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="20dp">
        <TextView
            android:id="@+id/text_entry_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alpha Observer"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:id="@+id/text_entry_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Catalyst"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_entry_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#33FFFFFF"
        android:fontFamily="sans-serif"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:padding="10dp"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/button_entry_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_entry_register"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:backgroundTint="@color/white"
        android:fontFamily="sans-serif"
        android:padding="10dp"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="#B39BC9"
        android:textSize="30sp"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>